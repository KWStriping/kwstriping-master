{
  "name": "@core/i18n",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "exports": {
    "./locales/*.json": {
      "require": "./src/locales/*.json",
      "import": "./src/locales/*.json"
    },
    "./next-i18next.base.config": {
      "require": "./src/next-i18next.base.config.js",
      "import": "./src/next-i18next.base.config.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "scripts": {
    "clean": "npx rimraf --no-glob ./dist ./coverage ./tsconfig.tsbuildinfo",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx,.cjs,.mjs --cache --cache-location ../../.cache/eslint/i18n.eslintcache",
    "typecheck": "tsc --project ./tsconfig.json --noEmit"
  },
  "dependencies": {
    "i18next": "^23.5.1",
    "i18next-chained-backend": "^4.5.0",
    "i18next-fs-backend": "^2.2.0",
    "i18next-http-backend": "^2.2.2",
    "i18next-localstorage-backend": "^4.2.0",
    "next-i18next": "15.2.0",
    "react-i18next": "14.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "18.13.0",
    "cross-env": "7.0.3",
    "typescript": "5.4.2"
  }
}
