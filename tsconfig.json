{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": ["apps/**/*", "assets/**/*", "data/**/*", "packages/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "alwaysStrict": true,
    "baseUrl": ".",
    "composite": false,
    "declaration": false,
    /* "declarationMap": true, */
    "esModuleInterop": true,
    "exactOptionalPropertyTypes": false,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "incremental": true,
    "inlineSources": false,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    /* @todo */
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": true,
    /* @todo */
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strictBindCallApply": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "useUnknownInCatchVariables": true,
    "strict": true,
    "target": "ESNext",
    /* @todo */
    "noPropertyAccessFromIndexSignature": false,
    "paths": {
      "@core/api": ["packages/api/src"],
      "@core/api/*": ["packages/api/src/generated/*"],
      "@core/auth": ["packages/auth/src"],
      "@core/auth/*": ["packages/auth/src/*"],
      "@core/checkout": ["packages/checkout/src"],
      "@core/checkout/*": ["packages/checkout/src/*"],
      "@core/eslint-rules": ["packages/eslint-rules/src/bases"],
      "@core/eslint-rules/rules": ["packages/eslint-rules/src/rules"],
      "@core/i18n": ["packages/i18n/src/index"],
      "@core/i18n/*": ["packages/i18n/src/*"],
      "@core/next/*": ["packages/next/src/*"],
      "@core/types": ["packages/types/src"],
      "@core/types/*": ["packages/types/src/*"],
      "@core/ui": ["packages/ui/src"],
      "@core/ui/*": ["packages/ui/src/*"],
      "@core/urql": ["packages/urql/src"],
      "@core/urql/*": ["packages/urql/src/*"],
      "@core/utils": ["packages/utils/src"],
      "@core/utils/*": ["packages/utils/src/*"],
      "@data/*": ["packages/data/*"],
      "@dashboard/*": ["packages/dashboard/*"],
      "@kwstriping/*": ["apps/kwstriping/*"],
      "@sokai/*": ["apps/sokai/*"],
      "@types/react": ["node_modules/@types/react"]
    }
  }
}
