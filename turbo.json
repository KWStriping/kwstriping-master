{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "generate"],
      "outputs": [
        "dist/**",
        ".next/**",
        "build/**",
        "content/locales/**",
        "content/compiled-locales/**"
      ],
      "env": [
        "BROWSER",
        "NEXT_PUBLIC_ALLOWED_IMAGE_DOMAINS",
        "NEXT_PUBLIC_API_URL",
        "NEXT_PUBLIC_DEFAULT_CHANNEL",
        "NEXT_PUBLIC_DEMO_MODE",
        "NEXT_PUBLIC_GEOLOCATION",
        "NEXT_PUBLIC_HOMEPAGE_MENU",
        "NEXT_PUBLIC_SENTRY_DSN",
        "NEXT_PUBLIC_SENTRY_ENVIRONMENT",
        "NEXT_PUBLIC_SENTRY_RELEASE",
        "NEXT_PUBLIC_STOREFRONT_NAME",
        "NEXT_PUBLIC_VERCEL_URL",
        "PORT",
        "APP",
        "API_URL",
        "SENTRY_DSN",
        "SENTRY_RELEASE",
        "SETTINGS_ENCRYPTION_SECRET",
        "STOREFRONT_URL"
      ]
    },
    "lint": {
      "outputs": []
    },
    "clean": {
      "cache": false,
      "outputs": []
    },
    "lint:staged": {
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "generate": {
      "outputs": ["graphql.schema.json", "generated/api.tsx"]
    },
    "test": {
      "outputs": []
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true
    }
  },
  "globalDependencies": [
    "assets",
    "data",
    "scripts",
    "pnpm-lock.yaml",
    "tsconfig.json",
    ".env",
    ".env.local"
  ]
}
